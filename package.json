{
  "name": "my-theblockchain-ai-app",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "build": "svelte-kit sync && vite build",
    "build:clean": "rm -rf .netlify build node_modules/.vite && npm ci && npm run build",
    "preview": "vite preview",
    "version": "node scripts/update-version.js",
    "brand:check": "node scripts/validate-brand-colors.js",
    "brand:check:fix": "node scripts/validate-brand-colors.js --fix",
    "git:clean": "git rm -r --cached node_modules/ || true",
    "git:check": "git status --porcelain | grep -E '^(A|M|D).*node_modules' && echo '⚠️  node_modules changes detected in git!' || echo '✅ Git clean - no node_modules tracked'",
    "precommit": "npm run git:check"
  },
  "dependencies": {
    "@google/generative-ai": "^0.11.0",
    "@supabase/supabase-js": "^2.50.5",
    "@sveltejs/adapter-netlify": "^5.0.2",
    "@sveltejs/kit": "^2.0.0",
    "@upstash/redis": "^1.35.1",
    "chart.js": "^4.5.0",
    "node-fetch": "^2.6.7",
    "stripe": "^18.3.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "svelte": "^4.2.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^5.4.10"
  }
}
